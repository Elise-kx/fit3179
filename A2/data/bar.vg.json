{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of arrivals from different Countries - TOP 5",
  "data": {
    "url": "data/number_arrivals_countries.csv"
  },
  "height": { "step": 50 },
  "width": 400,
  "params": [
    {
      "name": "year_selection",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 1992,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {
      "window": [{ "op": "rank", "as": "rank" }],
      "sort": [{ "field": "Number of arrivals", "order": "descending" }]
    },
    {
      "filter": {
        "timeUnit": "year",
        "field": "Year",
        "equal": "year_selection"
      }
    },
    { "filter": "datum.Ranking <= 5" }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Number of arrivals",
      "type": "quantitative"
    },
    "y": {
      "field": "Countries",
      "type": "nominal",
      "sort": { "field": "Number of arrivals", "order": "ascending" }

    },
    "tooltip": [
      { "field": "Countries", "type": "nominal" },
      { "field": "Year", "type": "temporal", "timeUnit": "year" },
      { "field": "Number of arrivals", "type": "quantitative" }
    ]
  },
  "config": {
    "title": {
      "font": "sans-serif",
      "fontSize": 22,
      "color": "#593403"
    },
    "background": "#ffeedb",
    "axis": {
      "titleColor": "#593403",
      "labelColor": "#593403",
      "labelFont": "sans-serif",
      "labelFontSize": 15,
      "titleFontSize": 15
    },
    "legend": {
      "titleColor": "#593403"
    }
  }
}
