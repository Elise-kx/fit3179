{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/number_arrivals.csv"
  },
  "vconcat": [
    {
      "title": "Number of Short-term Visitors Arrivals In Different States",
      "width": 800,
      "height": 400,
      "projection": { "type": "equirectangular" },
      "layer": [
        {
          "transform": [
            {
              "lookup": "State",
              "from": {
                "data": {
                  "url": "data/output.json",
                  "format": { "type": "topojson", "feature": "states" }
                },
                "key": "properties.STATE_NAME"
              },
              "as": "geo"
            },
            {
              "filter": { "param": "time_brush" }
            }
          ],
          "mark": { "type": "geoshape" },
          "encoding": {
            "shape": { "field": "geo", "type": "geojson" },
            "color": {
              "field": "Number of Arrivals",
              "type": "quantitative",
              "scale": { "type": "log" }
            },
            "tooltip": [
              {
                "field": "Year",
                "timeUnit": "year",
                "title": "Year"
              },
              {
                "field": "properties.STATE_NAME",
                "type": "nominal",
                "title": "State"
              },
              {
                "field": "Number of Arrivals",
                "type": "quantitative"
              }
            ]
          }
        },
        {
          "data": {
            "url": "data/output.json",
            "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
          },
          "mark": {
            "type": "geoshape",
            "stroke": "black",
            "strokeWidth": 1
          }
        }
      ]
    },
    {
      "width": 800,
      "height": 200,
      "mark": "point",
      "title": "Use this line chart to filter out the data based on Year",
      "params": [
        {
          "name": "time_brush",
          "select": { "type": "interval", "encodings": ["x"] }
        }
      ],
      "encoding": {
        "x": { "field": "Year", "title": "Year", "timeUnit": "year" },
        "y": {
          "field": "Number of Arrivals",
          "type": "quantitative",
          "title": "Total Number of Arrivals"
        },
        "color": { "field": "State", "type": "nominal" },
        "tooltip": [
          { "field": "State", "type": "nominal" },
          { "field": "Year", "type": "temporal", "timeUnit": "year" },
          { "field": "Number of Arrivals", "type": "quantitative" }
        ]
      }
    }
  ],
  "config": {
    "title": { 
      "font": "sans-serif",
      "fontSize": 22,
      "color": "#593403"
    },
    "background": "#ffeedb",
    "axis": {
      "titleColor": "#593403",
      "labelColor": "#593403",
      "labelFont": "sans-serif",
      "labelFontSize": 15,
      "titleFontSize": 15
    },
    "legend": {
      "titleColor": "#593403"
    }
  }
}
