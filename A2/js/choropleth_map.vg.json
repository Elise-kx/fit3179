{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/number_arrivals.csv"
  },
  "vconcat": [
    {
      "title": {
        "text": "Number of Short-term Visitors Arrivals In Different States",
        "fontSize": 22
      },
      "width": 800,
      "height": 400,
      "projection": { "type": "equirectangular" },
      "layer": [
        {
          "transform": [
            {
              "lookup": "State",
              "from": {
                "data": {
                  "url": "data/output.json",
                  "format": { "type": "topojson", "feature": "states" }
                },
                "key": "properties.STATE_NAME"
              },
              "as": "geo"
            },
            {
              "filter": { "param": "time_brush" }
            }
          ],
          "mark": { "type": "geoshape" },
          "encoding": {
            "shape": { "field": "geo", "type": "geojson" },
            "color": {
              "field": "Number of Arrivals",
              "type": "quantitative",
              "scale": { "type": "log", "scheme": "oranges" }
            },
            "tooltip": [
              {
                "field": "Year",
                "timeUnit": "year",
                "title": "Year"
              },
              {
                "field": "State",
                "type": "nominal"
              },
              {
                "field": "Number of Arrivals",
                "type": "quantitative",
                "format": ","
              }
            ]
          }
        },
        {
          "data": {
            "url": "data/output.json",
            "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
          },
          "mark": {
            "type": "geoshape",
            "stroke": "beige",
            "strokeWidth": 1
          }
        }
      ]
    },
    {
      "width": 800,
      "height": 200,
      "mark": { "type": "line", "point": true },
      "title": {
        "text": "*Use this chart to filter out the data based on Year (drag)*",
        "fontSize": 14,
        "fontStyle": "italic"
      },
      "params": [
        {
          "name": "time_brush",
          "select": { "type": "interval", "encodings": ["x"] }
        },
        {
          "name": "state",
          "select": { "type": "point", "fields": ["State"] },
          "bind": "legend"
        }
      ],
      "encoding": {
        "x": { "field": "Year", "title": "Year", "timeUnit": "year" },
        "y": {
          "field": "Number of Arrivals",
          "type": "quantitative",
          "title": "Total Number of Arrivals",
          "axis": { "format": ".2s" }
        },
        "color": { "field": "State", "type": "nominal" },
        "tooltip": [
          { "field": "State", "type": "nominal" },
          { "field": "Year", "type": "temporal", "timeUnit": "year" },
          {
            "field": "Number of Arrivals",
            "type": "quantitative",
            "format": ","
          }
        ],
        "opacity": {
          "condition": { "param": "state", "value": 1 },
          "value": 0.2
        }
      }
    }
  ],
  "config": {
    "title": {
      "font": "sans-serif",
      "color": "#593403"
    },
    "background": "#ffeedb",
    "axis": {
      "titleColor": "#593403",
      "labelColor": "#593403",
      "labelFont": "sans-serif",
      "labelFontSize": 12,
      "titleFontSize": 12
    },
    "legend": {
      "titleColor": "#593403"
    }
  }
}
