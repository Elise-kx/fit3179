{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "../data/number_arrivals_reasons.csv"
  },
  "width": 500,
  "height": 300,
  "params": [
    {
      "name": "year_selection",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 1992,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": {
        "timeUnit": "year",
        "field": "Year",
        "equal": "year_selection"
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "Number of Arrivals",
      "type": "quantitative",
      "title": "Number of Arrivals"
    },
    "y": {
      "field": "Reasons to travel",
      "type": "nominal",
      "title": "Reasons to travel",
      "axis": {
        "offset": 5,
        "ticks": false,
        "minExtent": 70,
        "domain": false
      }
    },
    "tooltip": [
      { "field": "Year", "type": "temporal", "timeUnit": "year", "title": "Year" },

      { "field": "Reasons to travel", "type": "nominal" },
      { "field": "Number of Arrivals", "type": "quantitative", "format": "," }
    ]
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {
          "field": "Reasons to travel",
          "type": "nominal"
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "size": 200
      },
      "encoding": {
        "color": { "field": "Reasons to travel" }
      }
    }
  ],
  "config": {
    "title": {
      "font": "sans-serif",
      "fontSize": 22,
      "color": "#593403"
    },
    "background": "#ffeedb",
    "axis": {
      "titleColor": "#593403",
      "labelColor": "#593403",
      "labelFont": "sans-serif",
      "labelFontSize": 15,
      "titleFontSize": 15
    },
    "legend": {
      "titleColor": "#593403"
    },
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}
