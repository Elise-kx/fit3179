{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/number_arrivals_reasons.csv"
  },
  "width": 450,
  "height": 300,
  "title": {
    "text": "Visitor's Main Reasons to visit Australia",
    "fontSize": 22,
    "fontStyle": "italic"
  },
  "params": [
    {
      "name": "reason",
      "select": { "type": "point", "fields": ["Reasons to travel"] },
      "bind": "legend"
    }
  ],
  "encoding": {
    "y": {
      "field": "Number of Arrivals",
      "type": "quantitative",
      "title": "Number of Arrivals"
    },
    "x": {
      "field": "Year",
      "timeUnit": "year",
      "type": "ordinal",
      "title": "Year"
    },
    "color": {
      "field": "Reasons to travel",
      "type": "nominal",
      "title": "Reasons to travel"
    },
    "tooltip": [
      {
        "field": "Year",
        "type": "temporal",
        "timeUnit": "year",
        "title": "Year"
      },
      { "field": "Reasons to travel", "type": "nominal" },
      { "field": "Number of Arrivals", "type": "quantitative", "format": "," }
    ],
    "opacity": {
      "condition": { "param": "reason", "value": 1 },
      "value": 0.2
    }
  },
  "layer": [
    {
      "mark": {
        "type": "bar",
        "cornerRadiusTopLeft": 3,
        "cornerRadiusTopRight": 3
      },

      "encoding": {
        "color": { "field": "Reasons to travel" }
      }
    }
  ],
  "config": {
    "title": {
      "font": "sans-serif",
      "fontSize": 22,
      "color": "#593403"
    },
    "background": "#ffeedb",
    "axis": {
      "titleColor": "#593403",
      "labelColor": "#593403",
      "labelFont": "sans-serif",
      "labelFontSize": 12,
      "titleFontSize": 12
    },
    "legend": {
      "titleColor": "#593403"
    },
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}