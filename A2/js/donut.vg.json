{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple donut chart with embedded data.",
  "data": {
    "url": "data/number_arrivals_reasons.csv"
  },
  "width": 300,
  "height": 300,
  "params": [
    {
      "name": "year_selection",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 1992,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": {
        "timeUnit": "year",
        "field": "Year",
        "equal": "year_selection"
      }
    }
  ],
  "mark": { "type": "arc", "innerRadius": 50 },
  "encoding": {
    "theta": { "field": "Number of Arrivals", "type": "quantitative" },
    "color": { "field": "Reasons to travel", "type": "nominal" },
    "tooltip": [
      { "field": "Year", "type": "temporal", "timeUnit": "year" },
      { "field": "Reasons to travel", "type": "nominal" },
      { "field": "Number of Arrivals", "type": "quantitative" }
    ]
  },
  "config": {
    "title": {
      "font": "sans-serif",
      "fontSize": 22,
      "color": "#593403"
    },
    "background": "#ffeedb",
    "axis": {
      "titleColor": "#593403",
      "labelColor": "#593403",
      "labelFont": "sans-serif",
      "labelFontSize": 15,
      "titleFontSize": 15
    },
    "legend": {
      "titleColor": "#593403"
    }
  }
}
