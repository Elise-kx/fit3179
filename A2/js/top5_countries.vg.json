{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of arrivals from different Countries - TOP 5",
  "data": {
    "url": "data/number_arrivals_countries.csv"
  },
  "height": { "step": 50 },
  "width": 500,
  "params": [
    {
      "name": "year_selection",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 1992,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": {
        "timeUnit": "year",
        "field": "Year",
        "equal": "year_selection"
      }
    },
    {
      "window": [{ "op": "rank", "as": "rank" }],
      "sort": [{ "field": "Number of arrivals", "order": "descending" }]
    },
    { "filter": "datum.Ranking <= 5" }
  ],
  "layer": [
    {
      "mark": "bar",
      "transform": [
        {
          "window": [{ "op": "rank", "as": "rank" }],
          "sort": [{ "field": "Number of arrivals", "order": "descending" }]
        },
        { "filter": "datum.Ranking <= 5" }
      ],
      "encoding": {
        "x": {
          "field": "Number of arrivals",
          "type": "quantitative",
          "aggregate": "max",
          "axis": {"format": ".2s"},
          "title": "Number of arrivals"
        },
        "y": {
          "field": "Countries",
          "type": "nominal",
          "sort": { "field": "Number of arrivals", "order": "descending" }
        },
        "tooltip": [
          { "field": "Countries", "type": "nominal" },
          { "field": "Year", "type": "temporal", "timeUnit": "year" },
          { "field": "Number of arrivals", "type": "quantitative", "format": ".2s" }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "xOffset": -4,
        "aria": false,
        "dx": 8,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {
          "field": "Number of arrivals",
          "type": "quantitative"
        },
        "y": {
          "field": "Countries",
          "type": "nominal",
          "sort": { "field": "Number of arrivals", "order": "descending" } 
        },
        "text": { "field": "Number of arrivals", "type": "quantitative", "format": ".2s" }
      }
    }
  ],
  "config": {
    "title": {
      "font": "sans-serif",
      "fontSize": 22,
      "color": "#593403"
    },
    "background": "#ffeedb",
    "axis": {
      "titleColor": "#593403",
      "labelColor": "#593403",
      "labelFont": "sans-serif",
      "labelFontSize": 12,
      "titleFontSize": 12
    },
    "legend": {
      "titleColor": "#593403"
    }
  }
}
