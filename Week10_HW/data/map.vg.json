{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Tourism analysis of Australia",
    "anchor": "middle",
    "fontSize": 24,
    "fontStyle": "Italic"
  },
  "width": 800,
  "height": 400,
  "projection": { "type": "equirectangular" },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Elise-kx/fit3179/refs/heads/main/Week10_HW/data/output.json",
        "format": { "type": "topojson", "feature": "states" }
      },
      "mark": { "type": "geoshape" },
      "transform": [
        {
          "lookup": "properties.STATE_NAME",
          "from": {
            "data": {
              "url": "number_arrivals.csv"
            },
            "key": "State",
            "fields": ["Year", "Number of Arrivals"]
          }
        }
      ],
      "encoding": {
        "color": {
          "field": "Number of Arrivals",
          "type": "quantitative",
          "scale": { "type": "log" }
        },
        "tooltip": [
          {
            "field": "Year",
            "type": "temporal",
            "title": "Year"
          },
          {
            "field": "properties.STATE_NAME",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Number of Arrivals",
            "type": "quantitative"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Elise-kx/fit3179/refs/heads/main/Week10_HW/data/output.json",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 1
      }
    }
  ]
}
