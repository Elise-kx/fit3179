{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 300,
  "data": { "url": "number_arrivals.csv" },
  "mark": "point",
  "transform": [
    {
      "aggregate": [{
        "op": "sum",
        "field": "Number of Arrivals",
        "as": "Total Arrivals"  
      }],
      "groupby": ["Year", "State"]  
    }
  ],
  "encoding": {
    "x": { "field": "Year", "timeUnit": "year", "title": "Year" },
    "y": { "field": "Total Arrivals", "type": "quantitative", "title": "Total Number of Arrivals" },
    "color": { "field": "State", "type": "nominal" },
    "tooltip": [
      { "field": "Year", "type": "temporal", "timeUnit": "year" },
      { "field": "State", "type": "nominal" },
      { "field": "Total Arrivals", "type": "quantitative", "title": "Total Number of Arrivals" }
    ]
  }
}


